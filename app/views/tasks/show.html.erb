<% provide(:title, current_user.name) %>

<h1>タスク詳細</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="table-task">
      <tr>
        <th class="active col-md-2">ID</th>
        <td class="col-md-10"><%= @task.id %></td>
      </tr>
      <tr>
        <th class="active">task_name</th>
        <td><%= @task.task_name %></td>
      </tr>
      <tr>
        <th class="active">details</th>
        <td><%= @task.details %></td>
      </tr>
      <tr>
        <th class="active">created_date</th>
        <td><%= @task.created_at %></td>
      </tr>
      <tr>
        <th class="active">update_date</th>
        <td><%= @task.updated_at %></td>
      </tr>
    </table>
      <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_task_path(@user, @task), method: :delete,
          data: { confirm: "削除してよろしいですか？" },
          class: "btn btn-lg btn-danger"%>
  </div>
</div>