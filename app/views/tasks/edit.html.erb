<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true) do |f| %>
      <%= f.label :task_name, class: "label-task--edit" %>
      <%= f.text_field :task_name, class: "form-control" %>
      
      <%= f.label :details, class: "label-task--edit" %>
      <%= f.text_area :details, :size => "5x5", class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", tasks_path, class: "btn btn-default btn-form" %>
    <% end %>
    <%= link_to "キャンセル", tasks_path, class: "btn btn-default btn-form" %>
  </div>
</div>