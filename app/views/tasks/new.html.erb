<% provide(:title, 'New Task') %>
<h1>タスク新規作成</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :task_name, class: "label-signup" %>
      <%= f.text_field :task_name, class: "form-control" %>
      
      <%= f.label :details, class: "label-signup" %>
      <%= f.text_area :details, :size => "5x5", class: "form-control" %>
      
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-signup" %>
    <% end %>
  </div>
</div>